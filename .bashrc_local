set_home()
{
    if [[ "$(hostname)" == *".ihep.ac.cn" ]];then
        export ALT_HOME=/publicfs/ucas/user/$USER
    else
        export ALT_HOME=$HOME
    fi

    echo "Setting HOME=$ALT_HOME, for host $(hostname)"

    if [[ ! -d $ALT_HOME ]];then
        echo "Directory ALT_HOME=\"$ALT_HOME\" not found"
        kill -INT $$
    fi
}
