#-----------------------------------------------------
pip_publish()
{
    rm -rf dist bdist_wheel

    if   [[ -f setup.py ]];then
	python setup.py sdist bdist_wheel
    elif [[ -f pyproject.toml ]];then
	python -m build 
    else
	echo "No setup.py or pyproject.toml found"
	kill -INT $$
    fi

    python -m twine upload dist/*
}
